    "license": "MIT",
    "type": "enjoyscms-module",
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\Module\\SimpleGallery\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Enjoys",
            "email": "deadly.info@gmail.com"
        }
    ],
    "require": {
        "php": ">= 8.0",
        "enjoyscms/core": "^4.5",
        "enjoyscms/admin": "^4.0",
        "enjoys/upload": "^3.0",
        "intervention/image": "^2.6",
        "beberlei/doctrineextensions": "^1.3"
