<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

    div.gallery:hover {
        border: 1px solid #777;
    }

    div.gallery img {
        width: 100%;
        height: auto;
    }

    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>

{% set uploadDir = _ENV.UPLOAD_URL ~ config.uploadDir %}

{% for image in images %}
    <div class="gallery">
        <a target="_blank" href="{{ uploadDir ~ image.getFilename }}">
            <img src="{{ uploadDir ~ image.getFilename|replace({".": "_thumb."}) }}" alt="">
        </a>
        <div class="desc">{{ image.getDescription }}</div>
    </div>
{% else %}
    <h2>Пока тут ничего нет.</h2>
{% endfor %}

